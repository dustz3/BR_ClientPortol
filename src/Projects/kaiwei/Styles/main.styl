// kai-wei.tw 專案樣式 - 垂直滾動簡報

// 變數定義
@import 'variables.styl'

// 與舊命名對齊（若仍有使用到舊變數名）
kai-wei-teal = kaiwei-teal
kai-wei-red = kaiwei-red
kai-wei-black = kaiwei-black
kai-wei-cream = kaiwei-green
kai-wei-orange = kaiwei-orange
kai-wei-navy = kaiwei-navy

primary-color = kaiwei-black
secondary-color = kaiwei-navy
accent-color = kaiwei-teal
success-color = #27ae60
warning-color = kaiwei-orange
text-color = kaiwei-black
bg-color = kaiwei-green

// 全域樣式
*
  margin: 0
  padding: 0
  box-sizing: border-box

html, body
  height: 100%
  overflow: hidden // 防止頁面滾動
  font-family: 'Microsoft JhengHei', 'PingFang TC', 'Helvetica Neue', Arial, sans-serif
  background kaiwei-green

// Dashboard 背景（桌面）同 SEO 綠色系背景
.dashboard-body
  background kaiwei-green
  @media (min-width: 1024px)
    background kaiwei-green

// Dashboard / Results 基礎
.dashboard
  max-width 960px
  margin 40px auto
  padding 20px
  color #111827

  .dashboard-header
    margin-bottom 24px
    h1
      font-size 28px
      margin-bottom 6px
    p
      color #6b7280

  .dashboard-actions
    display grid
    grid-template-columns repeat(2, minmax(0, 1fr))
    gap 16px

    .dashboard-card
      display block
      background #ffffff
      border 1px solid #e5e7eb
      border-radius 12px
      padding 20px
      color #111827
      text-decoration none
      transition transform .15s ease, border-color .15s ease, box-shadow .15s ease
      h2
        margin 0 0 6px 0
        font-size 20px
      p
        margin 0
        color #6b7280
      &:hover
        transform translateY(-2px)
        border-color #d1d5db
        box-shadow 0 8px 24px rgba(0,0,0,.06)

.results-container
  max-width 960px
  margin 40px auto
  padding 20px
  color #111827
  .results-header
    margin-bottom 16px
  .results-section
    margin 20px 0
  .kpi-table
    width 100%
    border-collapse collapse
    th, td
      border 1px solid #e5e7eb
      padding 10px
      text-align center
    th
      background #f9fafb
  .btn-back
    display inline-block
    margin-top 24px
    color #2563eb
    text-decoration none
    &:hover
      text-decoration underline

// 登出按鈕樣式
.logout-container
  position: fixed
  top: 20px
  right: 20px
  z-index: 1000

.logout-btn
  background: linear-gradient(135deg, #e74c3c, #c0392b)
  color: white
  border: none
  padding: 10px 20px
  border-radius: 25px
  font-size: 14px
  font-weight: 600
  cursor: pointer
  transition: all 0.3s ease
  box-shadow: 0 4px 15px rgba(231, 76, 60, 0.3)

  &:hover
    transform: translateY(-2px)
    box-shadow: 0 6px 20px rgba(231, 76, 60, 0.4)

  &:active
    transform: translateY(0)

// 簡報容器
.presentation-container
  position: relative
  width: 100%
  height: 100vh
  overflow: hidden
  background-color: kaiwei-green

// 投影片樣式
.slide
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100vh
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  padding: 2rem
  box-sizing: border-box
  transition: transform 0.6s ease-in-out
  z-index: 1
  
  // 確保內容不會超出視窗
  overflow: hidden
  
  h1, h2, h3, h4, h5, h6
    color: primary-color
    font-weight: 600
    text-align: center
    font-size 2rem
    margin-bottom: 1rem
    
  p, li
    color: text-color
    line-height: 1.6
    text-align: center

// 背景顏色樣式
.slide[data-background-color="#2c3e50"]
  background-color: #2c3e50
  
  h1, h2, h3, h4, h5, h6, p, li
    color: #ffffff

.slide[data-background-color="#34495e"]
  background-color: #34495e
  
  h1, h2, h3, h4, h5, h6, p, li
    color: #ffffff

.slide[data-background-color="#000"]
  background-color: #000000
  
  h1, h2, h3, h4, h5, h6, p, li
    color: #ffffff

// 報告資訊樣式
.report-info
  margin-top: 2rem
  text-align: center
  
  .date, .provider
    font-size: 1.2rem
    margin: 0.5rem 0
    
  .provider
    color: accent-color
    font-weight: 500

// 工具資訊樣式
.tool-info
  display: grid
  grid-template-columns: repeat(2, 1fr)
  gap: 2rem
  margin-top: 2rem
  max-width: 800px
  .tool-item
    h3
      margin-bottom: .5rem
    p
      margin 0

// 使內容區與表格在簡報中水平置中（套用於 results-slide1 等頁）
.full-width-content
  max-width 960px
  margin 0 auto
  display flex
  flex-direction column
  align-items center

.report-table
  margin 16px auto

// 半寬內容容器：用於需要較窄閱讀寬度的版面
.half-width-content
  width 50%
  margin 0 auto
  display flex
  flex-direction column
  align-items center
  
  .tool-item
    padding: 1.5rem
    border-radius: 8px
    background: rgba(52, 73, 94, 0.05)
    border-left: 4px solid accent-color
    
    h3
      margin-bottom: 1rem
      color: accent-color
      
    p
      margin: 0
      font-size: 1rem

// 效能摘要樣式
.performance-summary
  .device-scores
    display: grid
    grid-template-columns: repeat(2, 1fr)
    gap: 2rem
    margin-bottom: 2rem
    max-width: 800px
    .website-screenshot
      img
        max-width: 100%
        height: auto
        display: block
    
    .device-item
      padding: 1.5rem
      border-radius: 8px
      background: rgba(52, 73, 94, 0.05)
      
      h3
        margin-bottom: 1rem
        color: primary-color
        
      .scores
        .score
          padding: 0.5rem 0
          border-bottom: 1px solid rgba(52, 73, 94, 0.1)
          font-weight: 500
          
          &:last-child
            border-bottom: none
  
  .overall-evaluation
    text-align: center
    padding: 2rem
    background: rgba(39, 174, 96, 0.1)
    border-radius: 8px
    border: 2px solid success-color
    max-width: 600px
    
    h3
      color: success-color
      margin-bottom: 1rem

// 指標樣式
.mobile-metrics, .desktop-metrics
  display: grid
  grid-template-columns: repeat(2, 1fr)
  gap: 1.5rem
  margin-bottom: 2rem
  max-width: 800px
  
  .metric-item
    padding: 1.5rem
    border-radius: 8px
    background: rgba(52, 73, 94, 0.05)
    text-align: center
    
    h3
      margin-bottom: 1rem
      color: primary-color
      font-size: 1rem
      
    .value
      font-size: 2rem
      font-weight: bold
      color: accent-color
      margin-bottom: 0.5rem
      
    .note
      font-size: 0.9rem
      color: warning-color
      font-style: italic

// 優化建議樣式
.optimization-suggestions
  margin-top: 2rem
  padding: 1.5rem
  background: rgba(243, 156, 18, 0.1)
  border-radius: 8px
  border-left: 4px solid warning-color
  max-width: 600px
  
  h3
    color: warning-color
    margin-bottom: 1rem
    
  ul
    margin: 0
    padding-left: 1.5rem

// SEO 評估樣式
.seo-evaluation
  .seo-score
    text-align: center
    margin-bottom: 2rem
    
    .score-value
      font-size: 3rem
      font-weight: bold
      color: success-color
      margin: 1rem 0
  
  .seo-strengths, .seo-improvements
    margin-bottom: 2rem
    padding: 1.5rem
    border-radius: 8px
    max-width: 600px
    
  .seo-strengths
    background: rgba(39, 174, 96, 0.1)
    border-left: 4px solid success-color
    
    h3
      color: success-color
      
  .seo-improvements
    background: rgba(243, 156, 18, 0.1)
    border-left: 4px solid warning-color
    
    h3
      color: warning-color

// 總結樣式
.conclusion-content
  .main-conclusion
    text-align: center
    margin-bottom: 2rem
    padding: 2rem
    background: rgba(39, 174, 96, 0.1)
    border-radius: 8px
    border: 2px solid success-color
    max-width: 600px
    
    h3
      color: success-color
      margin-bottom: 1rem
      
    p
      font-size: 1.2rem
      font-weight: 500
  
  .recommendations, .next-steps
    margin-bottom: 1.5rem
    padding: 1.5rem
    border-radius: 8px
    background: rgba(52, 73, 94, 0.05)
    max-width: 600px
    
    h3
      margin-bottom: 1rem
      color: primary-color

// 聯絡資訊樣式
.contact-info
  text-align: center
  margin-bottom: 2rem
  
  p
    font-size: 1.2rem
    margin: 1rem 0
    
    strong
      color: accent-color

.thank-you
  text-align: center
  margin-top: 2rem
  
  p
    margin: 0.5rem 0

// 進度條樣式
.progress-bar
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 4px
  background: rgba(255, 255, 255, 0.3)
  z-index: 1000
  
  .progress-fill
    height: 100%
    background: accent-color
    transition: width 0.3s ease

// 導航點樣式
.slide-navigation
  position: fixed
  right: 20px
  top: 50%
  transform: translateY(-50%)
  z-index: 1000
  display: flex
  flex-direction: column
  gap: 10px
  
  .nav-dot
    width: 12px
    height: 12px
    border-radius: 50%
    background: rgba(255, 255, 255, 0.5)
    cursor: pointer
    transition: all 0.3s ease
    
    &:hover
      background: rgba(255, 255, 255, 0.8)
      transform: scale(1.2)

// 響應式設計
@media (max-width: 768px)
  .tool-info, .device-scores, .mobile-metrics, .desktop-metrics
    grid-template-columns: 1fr
    gap: 1rem
    
  .slide
    padding: 1rem
    
  .slide-navigation
    right: 10px
    
  .nav-dot
    width: 10px
    height: 10px

@media (max-width: 480px)
  .slide
    padding: 0.5rem
    
  h1
    font-size: 1.8rem
    
  h2
    font-size: 1.5rem
    
  h3
    font-size: 1.2rem