doctype html
html(lang="zh-TW")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title 標題與描述分析 - 品耀數位行銷
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet")
    link(rel="stylesheet" href="css/slide.css")
  body.results-page
    .presentation-container
      .slide
        .slide-content
          .content-title
            h1 Sitemap / robots.txt / GA4 設定
          .content-body.layout-full
            .half-width-content
              h2 Sitemap 設定
              a(href="https://kai-wei.tw/sitemap_index.xml" target="_blank") Sitemap
              h2 robots.txt 設定
              p 
                a(href="https://kai-wei.tw/robots.txt " target="_blank") robots.txt
              h2 GA4 設定
              p 見 WordPress 後台 Site Kit 單元 
            .half-width-content
              img(src="images/ga4.png" alt=" ")
  script.
    // 佈局切換功能
    document.addEventListener('DOMContentLoaded', function() {
      // 只在桌面版顯示佈局切換功能
      if (window.innerWidth > 768) {
        const splitLayout = document.querySelector('.layout-split');
        const fullLayout = document.querySelector('.layout-full');

        if (splitLayout) splitLayout.style.display = 'none';
        if (fullLayout) fullLayout.style.display = 'flex';

        // 添加標題點擊功能
        const title = document.querySelector('.content-title h1');
        if (title) {
          title.style.cursor = 'pointer';
          title.title = '點擊切換佈局';
          title.addEventListener('click', function() {
            if (splitLayout.style.display === 'flex') {
              splitLayout.style.display = 'none';
              fullLayout.style.display = 'flex';
              title.textContent = '標題與描述分析（Meta Tags）';
            } else {
              splitLayout.style.display = 'flex';
              fullLayout.style.display = 'none';
              title.textContent = '標題與描述分析（Meta Tags）';
            }
          });
        }
      }
    });

