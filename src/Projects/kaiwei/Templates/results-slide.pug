doctype html
html(lang="zh-TW")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title 標題與描述分析 - 品耀數位行銷
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet")
    link(rel="stylesheet" href="css/slide.css")
  body
    .presentation-container
      .slide
        .slide-content
          .content-title
            h1 標題與描述分析（Meta）
          .content-body.layout-full
            .half-width-content
              h2 目前狀況
              ul
                li 多數頁面標題未結合品牌名（如首頁、關於我們）
                li Meta Description 雖有填寫，但偏短且無關鍵字導向
              h2 問題：
              ul
                li 標題無強調主服務（無「整合式金流」、「網站架設」、「管理系統」等字樣）
                li 無一致性的品牌露出
            .half-width-content
              img(src="images/1.首頁.png").image-box
  script.
    // 佈局切換功能
    document.addEventListener('DOMContentLoaded', function() {
      // 只在桌面版顯示佈局切換功能
      if (window.innerWidth > 768) {
        const splitLayout = document.querySelector('.layout-split');
        const fullLayout = document.querySelector('.layout-full');

        if (splitLayout) splitLayout.style.display = 'none';
        if (fullLayout) fullLayout.style.display = 'flex';

        // 添加標題點擊功能
        const title = document.querySelector('.content-title h1');
        if (title) {
          title.style.cursor = 'pointer';
          title.title = '點擊切換佈局';
          title.addEventListener('click', function() {
            if (splitLayout.style.display === 'flex') {
              splitLayout.style.display = 'none';
              fullLayout.style.display = 'flex';
              title.textContent = '標題與描述分析（Meta Tags）';
            } else {
              splitLayout.style.display = 'flex';
              fullLayout.style.display = 'none';
              title.textContent = '標題與描述分析（Meta Tags）';
            }
          });
        }
      }
    });