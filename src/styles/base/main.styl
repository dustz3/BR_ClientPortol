// 品耀數位行銷 - 基礎樣式
// 使用品耀品牌色彩：#2c3e50, #34495e

// 引入全域變數
@import 'variables.styl'

// 基礎重置
*
  margin 0
  padding 0
  box-sizing border-box

// 基礎字體
body
  font-family 'Microsoft JhengHei', 'PingFang TC', 'Helvetica Neue', Arial, sans-serif
  line-height 1.6
  color $text-color
  background $text-color
  min-height 100vh
  display flex
  align-items center
  justify-content center

// 通用按鈕樣式
.btn
  display inline-block
  padding 0.75rem 1.5rem
  border none
  border-radius 8px
  font-size 1rem
  font-weight 600
  text-decoration none
  text-align center
  cursor pointer
  transition all 0.3s ease
  
  &.btn-primary
    background $gredient-color
    color white
    
    &:hover
      transform translateY(-2px)
      box-shadow 0 4px 12px rgba($primary-color, 0.3)

// 通用容器樣式
.container
  max-width 1200px
  margin 0 auto
  padding 0 1rem

// 通用卡片樣式
.card
  background white
  border-radius 12px
  box-shadow 0 4px 20px rgba(0, 0, 0, 0.1)
  padding 2rem
  margin-bottom 1.5rem

// 通用表單樣式
.form-group
  margin-bottom 1.5rem
  text-align left 
  
  label
    display block
    margin-bottom 0.5rem
    color $text-color
    font-weight 500
    
  input, textarea, select
    width 100%
    padding 0.75rem
    border 2px solid $border-color
    border-radius 8px
    font-size 1rem
    transition border-color 0.3s ease
    
    &::placeholder
      color #999
      opacity 0.7
    
    &:focus
      outline none
      border-color $primary-color

// 通用工具類
.text-center
  text-align center

.text-left
  text-align left

.text-right
  text-align right

.mb-1
  margin-bottom 0.5rem

.mb-2
  margin-bottom 1rem

.mb-3
  margin-bottom 1.5rem

.mt-1
  margin-top 0.5rem

.mt-2
  margin-top 1rem

.mt-3
  margin-top 1.5rem

// 登入頁面樣式

.login-container 
  background $background-light
  padding 0
  border-radius 20px
  box-shadow 0 20px 40px rgba(0, 0, 0, 0.2)
  width 100%
  max-width 900px
  height 500px
  display flex
  overflow hidden

// 左半部分 - 裝飾區域
.login-left
  width 50%
  background $gredient-color
  display flex
  align-items center
  justify-content center
  position relative
  
  &::before
    content ''
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    background url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="0.5"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>')
    opacity 0.3

// 左半部分內容樣式
.login-left .left-content
  text-align center
  color white
  z-index 2
  position relative
  
  h2
    font-size 2.5rem
    font-weight 300
    margin-bottom 1rem
    opacity 0.9
    
  p
    font-size 1.2rem
    margin 0.5rem 0
    opacity 0.8

// 右半部分 - 登入表單區域
.login-right
  width 50%
  padding 3rem
  display flex
  flex-direction column
  justify-content center
  text-align center

  // 公司標題區域 - 整個元件置中
  .company-header
    display flex
    align-items center
    justify-content center
    margin 0 auto 2rem auto
    gap 1.5rem
    max-width 400px

    .company-logo
      width 70px
      height 70px
      background $gredient-color
      border-radius 50%
      display flex
      align-items center
      justify-content center
      padding 15px
      box-sizing border-box
      flex-shrink 0
      
      img
        width 100%
        height 100%
        object-fit contain

    .company-info
      display flex
      flex-direction column
      align-items flex-start
      gap 0.3rem

      .company-name
        color $secondary-color
        font-size 1.8rem
        font-weight 600
        margin 0
        white-space nowrap

      .company-slogan
        color #7f8c8d
        font-size 0.9rem
        margin 0
        text-align left

  .subtitle
    color #7f8c8d
    margin-bottom 1rem
    font-size 0.9rem

  .login-btn
    width 100%
    padding 1rem
    background $gredient-color
    color white
    border none
    border-radius 10px
    font-size 1rem
    font-weight 600
    cursor pointer
    transition transform 0.2s ease
    
    &:hover
      transform translateY(-2px)

  .error-message
    color $error-color
    margin-top 1rem
    font-size 0.9rem
    display none

  .case-info 
    padding 1rem
    border-radius 8px
    margin-bottom .5rem
    font-size 0.9rem
    color #666

  .footer
    margin-top 2rem
    padding-top 1rem
    border-top 1px solid $border-color
    color #95a5a6
    font-size 0.8rem

  .demo-credentials
    background #e8f4f8
    padding 1rem
    border-radius 8px
    margin-top 1rem
    font-size 0.8rem
    color $primary-color

// 響應式設計
@media (max-width: 768px)
  .container
    padding 0 0.5rem
    
  .card
    padding 1.5rem
    
  .login-container
    flex-direction column
    height auto
    max-width 450px
    
  .login-left
    width 100%
    height 200px
    border-radius 20px 20px 0 0
    
  .login-right
    width 100%
    padding 2rem
    
  .login-left .left-content
    h2
      font-size 2rem
    p
      font-size 1rem
      
  .login-right
    .company-header
      flex-direction column
      gap 1rem
      max-width 300px
      
      .company-logo
        width 60px
        height 60px
        padding 12px
        
      .company-info
        align-items center
        text-align center
        
        .company-name
          font-size 1.5rem
          
        .company-slogan
          font-size 0.8rem

// 表格樣式

.seo-geo-table
  width 100%
  border-collapse collapse
  font-size 1rem
  background-color #fff
  border-radius 12px
  overflow hidden
  box-shadow 0 8px 24px rgba(0, 0, 0, 0.15)
  margin 2rem 0

  thead
    background $gredient-color
    
    th
      color white
      font-weight 600
      padding 1.2rem 1rem
      text-align center
      font-size 1.1rem
      border none
      text-shadow 0 1px 2px rgba(0, 0, 0, 0.2)
      
      &:first-child
        background rgba(255, 255, 255, 0.15)
        font-weight 700
        font-size 1.2rem

  tbody
    tr
      border-bottom 1px solid rgba($primary-color, 0.1)
      transition background-color 0.3s ease
      
      &:hover
        background-color rgba($accent-color, 0.08)
      
      &:last-child
        border-bottom none

    td
      padding 1rem
      vertical-align middle
      line-height 1.6
      word-wrap break-word
      white-space normal
      text-align left
      
      &:first-child
        background-color rgba($accent-color, 0.1)
        font-weight 600
        color $primary-color
        width 20%
        text-align center
        font-size 1.1rem
      
      &:nth-child(2)
        color $text-color
        width 40%
        border-right 1px solid rgba($primary-color, 0.2)
        text-align left
        
      &:last-child
        color $text-color
        width 40%
        text-align left

// 響應式表格樣式
@media (max-width: 768px)
  .seo-geo-table
    font-size 0.8rem
    
    thead th
      padding 0.8rem 0.5rem
      font-size 0.9rem
      
    tbody td
      padding 0.8rem 0.5rem
      font-size 0.85rem

// 卡片式佈局樣式 - 橫向排列
.strategy-cards
  display flex
  flex-direction column
  gap 1.5rem
  margin 2rem 0

.strategy-card
  background white
  border-radius 16px
  box-shadow 0 4px 20px rgba(0, 0, 0, 0.1)
  overflow hidden
  transition all 0.3s ease
  border 1px solid rgba($primary-color, 0.1)
  display flex
  flex-direction row
  min-height 200px
  
  &:hover
    transform translateY(-2px)
    box-shadow 0 8px 30px rgba(0, 0, 0, 0.15)

.card-header
  background linear-gradient(135deg, $gredient-color, lighten($primary-color, 10%))
  color white
  padding 1.5rem
  display flex
  flex-direction column
  align-items center
  justify-content center
  gap 0.8rem
  min-width 200px
  text-align center
  
.card-icon
  font-size 2.5rem
  line-height 1
  
.card-title
  margin 0
  font-size 1.2rem
  font-weight 600
  line-height 1.3
  
.card-content
  padding 1.5rem
  flex 1
  display flex
  gap 2rem
  
.card-section
  flex 1
  margin-bottom 0
    
  h4
    color $primary-color
    font-size 1.1rem
    font-weight 600
    margin 0 0 0.8rem 0
    
  ul
    margin 0
    padding-left 1.2rem
    
    li
      color $text-color
      line-height 1.6
      margin-bottom 0.5rem
      
      &:last-child
        margin-bottom 0

// 響應式卡片樣式
@media (max-width: 768px)
  .strategy-card
    flex-direction column
    min-height auto
    
    .card-header
      min-width auto
      padding 1.2rem
      flex-direction row
      justify-content flex-start
      text-align left
      
    .card-content
      padding 1.2rem
      flex-direction column
      gap 1.5rem
      
    .card-section
      margin-bottom 1.5rem
      
      &:last-child
        margin-bottom 0
      
    .card-icon
      font-size 1.8rem
      
    .card-title
      font-size 1.1rem

// 權限矩陣表格樣式 - 新配色方案
.permission-matrix-table
  width 100%
  border-collapse collapse
  font-size 1rem
  background-color #f8f9fa
  border-radius 12px
  overflow hidden
  box-shadow 0 8px 24px rgba(0, 0, 0, 0.15)
  margin 2rem 0

  thead
    background linear-gradient(135deg, #1e3a5f, #2c4a6b) // 深藍色漸層
    
    th
      color white
      font-weight 600
      padding 1.2rem 1rem
      text-align center
      font-size 1.1rem
      border none
      text-shadow 0 1px 2px rgba(0, 0, 0, 0.2)
      
      &.function-header
        background rgba(255, 255, 255, 0.15)
        font-weight 700
        text-align left
        min-width 180px
        
      &.role-header
        min-width 100px

  tbody
    tr
      border-bottom 1px solid #ccc // 統一使用 #ccc
      transition background-color 0.3s ease
      
      &:hover
        background-color rgba(173, 216, 230, 0.2) // 淺藍色懸停
      
      &:last-child
        border-bottom none

    .function-cell
      background-color rgba(30, 58, 95, 0.08) // 深藍色背景
      font-weight 600
      color #1e3a5f
      padding 1rem 1.2rem
      text-align left
      border-right 1px solid #ccc // 統一使用 #ccc
      
    .permission-cell
      padding 1rem
      text-align center
      font-size 1.2rem
      font-weight 700
      border-left 1px solid #ccc // 添加左邊線
      
      &.allowed
        background-color rgba(173, 216, 230, 0.3) // 淺藍色允許
        color #1e3a5f
        
      &.denied
        background-color rgba(32, 32, 32, 0.1) // 深色拒絕
        color #202020

// 權限說明區域 - 新配色
.permission-legend
  display flex
  gap 2rem
  margin 1.5rem 0
  padding 1rem
  background rgba(173, 216, 230, 0.1) // 淺藍色背景
  border-radius 8px
  border 1px solid #ccc // 統一使用 #ccc
  
.legend-item
  display flex
  align-items center
  gap 0.5rem
  
.legend-symbol
  font-size 1.2rem
  font-weight 700
  width 24px
  height 24px
  border-radius 50%
  display flex
  align-items center
  justify-content center
  
  &.allowed
    background-color #add8e6 // 淺藍色
    color #1e3a5f
    border 2px solid #ccc // 統一使用 #ccc
    
  &.denied
    background-color #202020 // 深色
    color white
    border 2px solid #ccc // 統一使用 #ccc
    
.legend-text
  color #1e3a5f
  font-weight 500

// 角色摘要卡片 - 新配色
.role-cards
  display grid
  grid-template-columns repeat(auto-fit, minmax(200px, 1fr))
  gap 1rem
  margin 1.5rem 0
  
.role-card
  background white
  border-radius 8px
  padding 1.2rem
  box-shadow 0 2px 8px rgba(30, 58, 95, 0.1)
  border-left 4px solid #1e3a5f // 深藍色邊框
  transition transform 0.2s ease
  
  &:hover
    transform translateY(-2px)
    box-shadow 0 4px 12px rgba(30, 58, 95, 0.2)
  
.role-title
  font-size 1.1rem
  font-weight 600
  color #1e3a5f // 深藍色標題
  margin-bottom 0.5rem
  
.role-description
  color #202020 // 深色文字
  font-size 0.9rem
  line-height 1.4
  margin-bottom 0.8rem
  
.permission-count
  font-size 0.85rem
  font-weight 600
  color #1e3a5f
  background rgba(173, 216, 230, 0.3) // 淺藍色背景
  border 1px solid #ccc // 統一使用 #ccc
  padding 0.3rem 0.6rem
  border-radius 4px
  display inline-block

// 響應式權限表格
@media (max-width: 768px)
  .permission-matrix-table
    font-size 0.85rem
    
    thead th
      padding 0.8rem 0.5rem
      font-size 0.9rem
      
    .function-cell
      padding 0.8rem
      min-width 140px
      
    .permission-cell
      padding 0.8rem 0.5rem
      font-size 1rem
      
  .permission-legend
    flex-direction column
    gap 1rem
    
  .role-cards
    grid-template-columns 1fr
