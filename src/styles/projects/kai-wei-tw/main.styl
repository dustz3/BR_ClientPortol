// kai-wei.tw 專案樣式 - 垂直滾動簡報

// 變數定義
// 凱崴數位專案色票
kai-wei-teal = #4a9b8e        // 青綠色/海藍色
kai-wei-red = #e74c3c         // 鮮豔紅色
kai-wei-black = #2c3e50       // 純黑色
kai-wei-cream = #f8f6f0       // 米色/淺奶油色
kai-wei-orange = #e67e22      // 溫暖橘色/淺棕色
kai-wei-navy = #34495e        // 深藍色/海軍藍

// 主要色彩變數
primary-color = kai-wei-black
secondary-color = kai-wei-navy
accent-color = kai-wei-teal
success-color = #27ae60
warning-color = kai-wei-orange
text-color = kai-wei-black
bg-color = #ffffff

// 全域樣式
*
  margin: 0
  padding: 0
  box-sizing: border-box

html, body
  height: 100%
  overflow: hidden // 防止頁面滾動
  font-family: 'Microsoft JhengHei', 'PingFang TC', 'Helvetica Neue', Arial, sans-serif

// 簡報容器
.presentation-container
  position: relative
  width: 100%
  height: 100vh
  overflow: hidden

// 投影片樣式
.slide
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100vh
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  padding: 2rem
  box-sizing: border-box
  transition: transform 0.6s ease-in-out
  z-index: 1
  
  // 確保內容不會超出視窗
  overflow: hidden
  
  h1, h2, h3, h4, h5, h6
    color: primary-color
    font-weight: 600
    text-align: center
    margin-bottom: 1rem
    
  p, li
    color: text-color
    line-height: 1.6
    text-align: center

// 報告資訊樣式
.report-info
  margin-top: 2rem
  text-align: center
  
  .date, .provider
    font-size: 1.2rem
    margin: 0.5rem 0
    
  .provider
    color: accent-color
    font-weight: 500

// 工具資訊樣式
.tool-info
  display: grid
  grid-template-columns: repeat(2, 1fr)
  gap: 2rem
  margin-top: 2rem
  max-width: 800px
  
  .tool-item
    padding: 1.5rem
    border-radius: 8px
    background: rgba(52, 73, 94, 0.05)
    border-left: 4px solid accent-color
    
    h3
      margin-bottom: 1rem
      color: accent-color
      
    p
      margin: 0
      font-size: 1rem

// 效能摘要樣式
.performance-summary
  .device-scores
    display: grid
    grid-template-columns: repeat(2, 1fr)
    gap: 2rem
    margin-bottom: 2rem
    max-width: 800px
    
    .device-item
      padding: 1.5rem
      border-radius: 8px
      background: rgba(52, 73, 94, 0.05)
      
      h3
        margin-bottom: 1rem
        color: primary-color
        
      .scores
        .score
          padding: 0.5rem 0
          border-bottom: 1px solid rgba(52, 73, 94, 0.1)
          font-weight: 500
          
          &:last-child
            border-bottom: none
  
  .overall-evaluation
    text-align: center
    padding: 2rem
    background: rgba(39, 174, 96, 0.1)
    border-radius: 8px
    border: 2px solid success-color
    max-width: 600px
    
    h3
      color: success-color
      margin-bottom: 1rem

// 指標樣式
.mobile-metrics, .desktop-metrics
  display: grid
  grid-template-columns: repeat(2, 1fr)
  gap: 1.5rem
  margin-bottom: 2rem
  max-width: 800px
  
  .metric-item
    padding: 1.5rem
    border-radius: 8px
    background: rgba(52, 73, 94, 0.05)
    text-align: center
    
    h3
      margin-bottom: 1rem
      color: primary-color
      font-size: 1rem
      
    .value
      font-size: 2rem
      font-weight: bold
      color: accent-color
      margin-bottom: 0.5rem
      
    .note
      font-size: 0.9rem
      color: warning-color
      font-style: italic

// 優化建議樣式
.optimization-suggestions
  margin-top: 2rem
  padding: 1.5rem
  background: rgba(243, 156, 18, 0.1)
  border-radius: 8px
  border-left: 4px solid warning-color
  max-width: 600px
  
  h3
    color: warning-color
    margin-bottom: 1rem
    
  ul
    margin: 0
    padding-left: 1.5rem

// SEO 評估樣式
.seo-evaluation
  .seo-score
    text-align: center
    margin-bottom: 2rem
    
    .score-value
      font-size: 3rem
      font-weight: bold
      color: success-color
      margin: 1rem 0
  
  .seo-strengths, .seo-improvements
    margin-bottom: 2rem
    padding: 1.5rem
    border-radius: 8px
    max-width: 600px
    
  .seo-strengths
    background: rgba(39, 174, 96, 0.1)
    border-left: 4px solid success-color
    
    h3
      color: success-color
      
  .seo-improvements
    background: rgba(243, 156, 18, 0.1)
    border-left: 4px solid warning-color
    
    h3
      color: warning-color

// 總結樣式
.conclusion-content
  .main-conclusion
    text-align: center
    margin-bottom: 2rem
    padding: 2rem
    background: rgba(39, 174, 96, 0.1)
    border-radius: 8px
    border: 2px solid success-color
    max-width: 600px
    
    h3
      color: success-color
      margin-bottom: 1rem
      
    p
      font-size: 1.2rem
      font-weight: 500
  
  .recommendations, .next-steps
    margin-bottom: 1.5rem
    padding: 1.5rem
    border-radius: 8px
    background: rgba(52, 73, 94, 0.05)
    max-width: 600px
    
    h3
      margin-bottom: 1rem
      color: primary-color

// 聯絡資訊樣式
.contact-info
  text-align: center
  margin-bottom: 2rem
  
  p
    font-size: 1.2rem
    margin: 1rem 0
    
    strong
      color: accent-color

.thank-you
  text-align: center
  margin-top: 2rem
  
  p
    margin: 0.5rem 0

// 進度條樣式
.progress-bar
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 4px
  background: rgba(255, 255, 255, 0.3)
  z-index: 1000
  
  .progress-fill
    height: 100%
    background: accent-color
    transition: width 0.3s ease

// 導航點樣式
.slide-navigation
  position: fixed
  right: 20px
  top: 50%
  transform: translateY(-50%)
  z-index: 1000
  display: flex
  flex-direction: column
  gap: 10px
  
  .nav-dot
    width: 12px
    height: 12px
    border-radius: 50%
    background: rgba(255, 255, 255, 0.5)
    cursor: pointer
    transition: all 0.3s ease
    
    &:hover
      background: rgba(255, 255, 255, 0.8)
      transform: scale(1.2)

// 響應式設計
@media (max-width: 768px)
  .tool-info, .device-scores, .mobile-metrics, .desktop-metrics
    grid-template-columns: 1fr
    gap: 1rem
    
  .slide
    padding: 1rem
    
  .slide-navigation
    right: 10px
    
  .nav-dot
    width: 10px
    height: 10px

@media (max-width: 480px)
  .slide
    padding: 0.5rem
    
  h1
    font-size: 1.8rem
    
  h2
    font-size: 1.5rem
    
  h3
    font-size: 1.2rem