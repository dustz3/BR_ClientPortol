// Slide 專用樣式 - 基於 kaiwei 專案風格

// 引入全域變數
@import '../../base/variables.styl'

// 引入 kaiwei 專案變數
@import 'variables.styl'

// 全域樣式
*
  margin 0
  padding 0
  box-sizing border-box

html, body
  display flex
  justify-content center
  align-items center
  height 100%
  overflow hidden
  font-family 'Inter', 'Microsoft JhengHei', 'PingFang TC', 'Helvetica Neue', Arial, sans-serif
  background-color #ccc

// 簡報容器
.presentation-container 
  display flex
  justify-content center
  align-items center
  width 100vw
  height 100vh

// 投影片樣式
.slide
  height 80vh
  width 80vw
  display flex
  flex-direction column 
  padding 2rem 5rem
  background kaiwei-green 
  border-radius 20px
  box-shadow 5px 5px 15px rgba(0, 5, 0, 0.3)
  
  .slide-content
    display flex
    flex-direction column 
    margin 2rem 0
    
    .content-title
      display flex
      flex-direction column 
      width 100%
      margin-bottom 2rem
      
      h1
        font-size 3.5rem 
        font-weight 700
        color kaiwei-black
        margin 0
        text-align left
    
    .content-body
      display flex
      flex-direction row
      justify-content space-between
      align-items flex-start
      width 100%
      height 100%
      gap 1rem
      
      .content-left
        flex 0 0 70% 
        display flex
        flex-direction column
        justify-content flex-start
        align-items flex-start
        background-color #fff
        border-radius 20px
        padding 2rem
        min-height 200px
        
        .content-left-title
          margin-bottom 1.5rem
          
          h2
            font-size 1.5rem
            font-weight 600
            color kaiwei-teal
            margin 0 0 0.5rem 0
            
          p
            font-size 1rem
            color kaiwei-navy
            margin 0.3rem 0
            line-height 1.4
      
      .content-right
        flex 0 0 30%
        display flex
        flex-direction column
        justify-content center
        align-items center 
        border-radius 20px
        
        .image-placeholder
          width 100%
          height 200px 
          border-radius 10px
          display flex
          justify-content center
          align-items center
          background-color #fff 
          
          p
            color kaiwei-navy
            font-size 1rem
            margin 0

// 響應式設計
@media (max-width: 768px)
  .slide
    padding 1rem
    
    .slide-content
      .content-title
        h1
          font-size 2rem
          
      .content-body
        flex-direction column
        gap 1rem
        
        .content-left
          flex 1 1 100%
          
        .content-right
          flex 1 1 100%
          
          .image-placeholder
            height 150px