// 客戶預覽簡報樣式
@import url('https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@300;400;500;700&display=swap')

// 變數定義
$primary-color = #2c3e50
$secondary-color = #3498db
$accent-color = #e74c3c
$text-color = #2c3e50
$bg-color = #ffffff
$border-radius = 8px
$box-shadow = 0 4px 6px rgba(0, 0, 0, 0.1)

// 全域樣式
*
  box-sizing border-box

body
  font-family 'Noto Sans TC', sans-serif
  color $text-color
  line-height 1.6

// Reveal.js 自訂樣式
.reveal
  .slides
    section
      text-align left
      
      h1, h2, h3, h4, h5, h6
        font-weight 700
        margin-bottom 1rem
        color $primary-color
        
      h1
        font-size 3rem
        text-align center
        
      h2
        font-size 2.5rem
        border-bottom 3px solid $secondary-color
        padding-bottom 0.5rem
        
      h3
        font-size 2rem
        color $secondary-color
        
      p
        font-size 1.2rem
        margin-bottom 1rem
        
      ul, ol
        font-size 1.1rem
        margin-bottom 1.5rem
        
        li
          margin-bottom 0.5rem
          
      strong
        color $accent-color
        font-weight 700

// 功能特色網格
.features-grid
  display grid
  grid-template-columns repeat(2, 1fr)
  gap 2rem
  margin 2rem 0
  
  .feature-item
    background $bg-color
    padding 1.5rem
    border-radius $border-radius
    box-shadow $box-shadow
    text-align center
    transition transform 0.3s ease
    
    &:hover
      transform translateY(-5px)
      
    h3
      font-size 1.5rem
      margin-bottom 1rem
      color $primary-color
      
    p
      font-size 1rem
      color lighten($text-color, 20%)

// 響應式設計
@media (max-width: 768px)
  .reveal
    .slides
      section
        h1
          font-size 2rem
          
        h2
          font-size 1.8rem
          
        h3
          font-size 1.5rem
          
        p, ul, ol
          font-size 1rem
          
  .features-grid
    grid-template-columns 1fr
    gap 1rem
    
    .feature-item
      padding 1rem

// 動畫效果
@keyframes fadeInUp
  from
    opacity 0
    transform translateY(30px)
  to
    opacity 1
    transform translateY(0)

.reveal
  .slides
    section
      animation fadeInUp 0.6s ease-out

// 按鈕樣式
.btn
  display inline-block
  padding 0.75rem 1.5rem
  background $secondary-color
  color white
  text-decoration none
  border-radius $border-radius
  font-weight 500
  transition all 0.3s ease
  
  &:hover
    background darken($secondary-color, 10%)
    transform translateY(-2px)
    box-shadow 0 4px 8px rgba(0, 0, 0, 0.2)

// 程式碼樣式
code
  background #f8f9fa
  padding 0.2rem 0.4rem
  border-radius 4px
  font-family 'Courier New', monospace
  color $accent-color

pre
  background #f8f9fa
  padding 1rem
  border-radius $border-radius
  overflow-x auto
  margin 1rem 0
  
  code
    background none
    padding 0

