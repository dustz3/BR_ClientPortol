    }
    
    // å‚ç›´æ»¾å‹•ç°¡å ±ç³»çµ±
    document.addEventListener('DOMContentLoaded', function() {
      // é¦–å…ˆæª¢æŸ¥èªè­‰
      if (!checkAuth()) {
        return;
      }
      const slides = document.querySelectorAll('.slide');
      let currentSlide = 0;
      let isScrolling = false;
      let scrollTimeout;
      
      // è¨­å®šåˆå§‹ç‹€æ…‹
      slides.forEach((slide, index) => {
        slide.style.transform = `translateY(${index * 100}vh)`;
        slide.style.zIndex = slides.length - index;
      });
      
      // é¡¯ç¤ºç¬¬ä¸€å¼µæŠ•å½±ç‰‡
      showSlide(0);
      
      // ç›£è½æ»¾è¼ªäº‹ä»¶
      document.addEventListener('wheel', function(event) {
        if (isScrolling) return;
        
        isScrolling = true;
        clearTimeout(scrollTimeout);
        
        // é˜²æ­¢é è¨­æ»¾å‹•è¡Œç‚º
        event.preventDefault();
        
        if (event.deltaY > 0) {
          // å‘ä¸‹æ»¾å‹• - ä¸‹ä¸€å¼µ
          if (currentSlide < slides.length - 1) {
            currentSlide++;
            showSlide(currentSlide);
          }
        } else {
          // å‘ä¸Šæ»¾å‹• - ä¸Šä¸€å¼µ
          if (currentSlide > 0) {
            currentSlide--;
            showSlide(currentSlide);
          }
        }
        
        // é‡ç½®æ»¾å‹•ç‹€æ…‹
        scrollTimeout = setTimeout(() => {
          isScrolling = false;
        }, 600);
      }, { passive: false });
      
      // ç›£è½è§¸æ§äº‹ä»¶
      let startY = 0;
      let startX = 0;
      
      document.addEventListener('touchstart', function(event) {
        startY = event.touches[0].clientY;
        startX = event.touches[0].clientX;
      }, { passive: true });
      
      document.addEventListener('touchend', function(event) {
        if (isScrolling) return;
        
        const endY = event.changedTouches[0].clientY;
        const endX = event.changedTouches[0].clientX;
        const diffY = startY - endY;
        const diffX = startX - endX;
        
        // åˆ¤æ–·æ˜¯å‚ç›´æ»‘å‹•é‚„æ˜¯æ°´å¹³æ»‘å‹•
        if (Math.abs(diffY) > Math.abs(diffX)) {
          isScrolling = true;
          
          if (diffY > 50) {
            // å‘ä¸Šæ»‘å‹• - ä¸‹ä¸€å¼µ
            if (currentSlide < slides.length - 1) {
              currentSlide++;
              showSlide(currentSlide);
            }
          } else if (diffY < -50) {
            // å‘ä¸‹æ»‘å‹• - ä¸Šä¸€å¼µ
            if (currentSlide > 0) {
              currentSlide--;
              showSlide(currentSlide);
            }
          }
          
          // é‡ç½®æ»¾å‹•ç‹€æ…‹
          setTimeout(() => {
            isScrolling = false;
          }, 600);
        }
      }, { passive: true });
      
      // ç›£è½éµç›¤äº‹ä»¶
      document.addEventListener('keydown', function(event) {
        switch(event.key) {
          case 'ArrowDown':
          case ' ':
            event.preventDefault();
            if (currentSlide < slides.length - 1) {
              currentSlide++;
              showSlide(currentSlide);
            }
            break;
          case 'ArrowUp':
            event.preventDefault();
            if (currentSlide > 0) {
              currentSlide--;
              showSlide(currentSlide);
            }
            break;
          case 'Home':
            event.preventDefault();
            showSlide(0);
            break;
          case 'End':
            event.preventDefault();
            showSlide(slides.length - 1);
            break;
        }
      });
      
      // é¡¯ç¤ºæŒ‡å®šæŠ•å½±ç‰‡
      function showSlide(index) {
        currentSlide = Math.max(0, Math.min(index, slides.length - 1));
        
        slides.forEach((slide, i) => {
          const offset = (i - currentSlide) * 100;
          slide.style.transform = `translateY(${offset}vh)`;
        });
        
        // æ›´æ–°é€²åº¦æŒ‡ç¤ºå™¨
        updateProgress();
        updateNavigation();
      }
      
      // æ›´æ–°é€²åº¦æŒ‡ç¤ºå™¨
      function updateProgress() {
        const progress = ((currentSlide + 1) / slides.length) * 100;
        const progressFill = document.getElementById('progressFill');
        progressFill.style.width = `${progress}%`;
      }
      
      // å‰µå»ºå°èˆªæŒ‡ç¤ºå™¨
      function createNavigation() {
        const nav = document.getElementById('slideNavigation');
        
        slides.forEach((_, index) => {
          const dot = document.createElement('div');
          dot.className = 'nav-dot';
          if (index === currentSlide) {
            dot.classList.add('active');
          }
          
          dot.addEventListener('click', () => {
            showSlide(index);
          });
          
          nav.appendChild(dot);
        });
      }
      
      // æ›´æ–°å°èˆªé»
      function updateNavigation() {
        const dots = document.querySelectorAll('.nav-dot');
        dots.forEach((dot, index) => {
          if (index === currentSlide) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }
      
      // åˆå§‹åŒ–å°èˆª
      createNavigation();
      
      // é˜²æ­¢é é¢æ»¾å‹•
      document.body.style.overflow = 'hidden';
      
      // éŸ¿æ‡‰å¼è™•ç†
      window.addEventListener('resize', function() {
        // é‡æ–°è¨ˆç®—æŠ•å½±ç‰‡ä½ç½®
        slides.forEach((slide, i) => {
          const offset = (i - currentSlide) * 100;
          slide.style.transform = `translateY(${offset}vh)`;
        });
      });
    });
