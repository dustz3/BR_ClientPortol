    function checkAuth() {
      const isLoggedIn = sessionStorage.getItem('isClientLoggedIn') === 'true';
      if (!isLoggedIn) {
        window.location.href = 'login.html';
        return false;
      }
      return true;
    }

    // ç™»å‡ºåŠŸèƒ½
    function logout() {
      sessionStorage.clear();
