doctype html
html(lang="zh-TW")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title 網站速度分析 - 品耀數位行銷
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet")
    link(rel="stylesheet" href="/css/projects/kaiwei/slide.css")
  body
    .presentation-container 
      .slide
        .slide-content
          .content-title
            h1.slide-title 網站速度分析（Lighthouse 報告摘要）
          
          .content-body.layout-full
            .full-width-content
              table.report-table.speed-analysis-table
                thead
                  tr
                    th 項目
                    th 手機端
                    th 桌機端
                    th 建議
                tbody
                  tr
                    td FCP (首次呈現內容)
                    td
                      span.mobile-value 1.1s
                    td
                      span.desktop-value 0.3s
                    td
                      span.recommendation-text 非常優秀
                  tr
                    td LCP (最大內容載入時間)
                    td
                      span.mobile-value 1.7s
                    td
                      span.desktop-value 0.7s
                    td
                      span.recommendation-text 表現佳，圖片已適度壓縮
                  tr
                    td TBT (總阻塞時間)
                    td
                      span.mobile-value 180ms
                    td
                      span.desktop-value 0ms
                    td
                      span.recommendation-text 表現優秀，互動體驗良好
                  tr
                    td CLS (累積位移)
                    td
                      span.mobile-value 0.03
                    td
                      span.desktop-value 0.163
                    td
                      span.recommendation-text 桌機略高，建議控制元素跳動

  script.
    // 佈局切換功能
    document.addEventListener('DOMContentLoaded', function() {
      // 預設顯示全寬佈局
      const splitLayout = document.querySelector('.layout-split');
      const fullLayout = document.querySelector('.layout-full');
      
      if (splitLayout) splitLayout.style.display = 'none';
      if (fullLayout) fullLayout.style.display = 'flex';
      
      // 添加切換按鈕
      const title = document.querySelector('.content-title h1');
      if (title) {
        title.style.cursor = 'pointer';
        title.title = '點擊切換佈局';
        title.addEventListener('click', function() {
          if (splitLayout.style.display === 'flex') {
            splitLayout.style.display = 'none';
            fullLayout.style.display = 'flex';
            title.textContent = '網站速度分析（Lighthouse 報告摘要）';
          } else {
            splitLayout.style.display = 'flex';
            fullLayout.style.display = 'none';
            title.textContent = '網站速度分析（Lighthouse 報告摘要）';
          }
        });
      }
    });
